{
  "plugins": [
    "prettier-plugin-astro",
    "prettier-plugin-css-order",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "importOrder": [
    "^astro/(.*)$",
    "^@astrojs/(.*)$",
    "^@assets/(.*)$",
    "^@components/(.*)$",
    "^@layouts/(.*)$",
    "^@lib/(.*)$",
    "^@pages/(.*)$",
    "^@styles/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
