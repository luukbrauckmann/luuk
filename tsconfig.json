{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "checkJs": true,
    "jsx": "preserve",
    "paths": {
      "@layouts": ["./src/layouts"],
      "@layouts/*": ["./src/layouts/*"],
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@lib": ["./src/lib"],
      "@lib/*": ["./src/lib/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
    }
  }
}
