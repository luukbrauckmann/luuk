---
import { Footer, Header, IconSprite, Seo } from "@components";

import "@lib/css/a11y.css";
import "@lib/css/layout.css";
import "@lib/css/reset.css";
import "@lib/css/theme.css";
import "@lib/css/typography.css";

const { locale } = Astro.params;
const { app, site, page } = Astro.props;
---

<html lang={locale}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <Seo tags={[...site.faviconMetaTags, ...page._seoMetaTags]} />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <link rel="preload" href="/fonts/pixelify-sans/pixelify-sans-regular/pixelify-sans-regular.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/fonts/pixelify-sans/pixelify-sans-medium/pixelify-sans-medium.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
  </head>

  <body>
    <Header nav={app.nav} slugs={page.slugs} />

    <main>
      <slot />
    </main>

    <Footer app={app} />

    <IconSprite />
  </body>
</html>
