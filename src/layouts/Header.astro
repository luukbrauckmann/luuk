---
import { Icon, LocaleSelector, Nav } from "@components";

const { nav } = Astro.props;
---

<header class="body__header">
  <Icon name="logo" size="3rem" />
  <Nav items={nav} />
  <LocaleSelector />
</header>

<style>
  .body__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .body__header > :global(:nth-child(2)) {
    flex: 1;
    margin-inline: 1rem;
  }
</style>
