---
import { Default } from '@layouts';
import { datocms } from '@lib';
import query from './index.graphql';

export async function getStaticPaths() {
  return [
    { params: { locale: 'nl' } },
    { params: { locale: 'en' } },
  ];
}

const { locale } = Astro.params;

const { page } = await datocms.request(query, { locale })
---

<Default>
	<h1>{ page.title }</h1>
</Default>
