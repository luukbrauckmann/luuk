---
import { Default } from "@layouts";
import { Blocks } from "@blocks";
import { datocms } from "@lib";
import { Rive } from "@components";
import query from "./index.query.graphql";

export async function getStaticPaths() {
  return [{ params: { locale: "nl" } }, { params: { locale: "en" } }];
}
const { locale } = Astro.params;

const { page } = await datocms.request(query, { locale });
---

<Default>
  <Rive src="/rive/Vehicles.riv" fit="Cover" stateMachines="bumpy" autoplay={true} />
  <Blocks blocks={page.body} />
</Default>
