---
/// <reference path="../../assets/icon-sprite.d.ts" />

const { name } = Astro.props;
---

<svg aria-hidden="true" data-icon={name}>
  <use xlink:href={`#${name}`}></use>
</svg>

<style>
  svg {
    display: inline-block;
    vertical-align: text-top;
    width: 1em;
    height: 1em;
    color: currentColor;
  }
</style>
