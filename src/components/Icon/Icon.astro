---
interface Props {
  name: string;
  title?: string;
}
const { name, title } = Astro.props;
---

<svg aria-hidden={title ? false : true} data-icon={name}>
  {title && <title>{title}</title>}
  <use xlink:href={`#${name}`}></use>
</svg>

<style>
  svg {
    display: inline-block;
    width: 1.5em;
    min-width: 1.5em;
    height: 1.5em;
    min-height: 1.5em;
    color: currentColor;
    fill: currentColor;
    font-size: inherit;
  }
</style>
