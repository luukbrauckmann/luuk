---
import type { IconName } from "@assets/icon-sprite";

interface Props {
  name: IconName;
}

const { name } = Astro.props;
---

<svg aria-hidden data-icon={name}>
  <use xlink:href={`#${name}`}></use>
</svg>

<style>
  svg {
    display: inline-block;
    width: 1em;
    height: 1em;
    color: currentColor;
    vertical-align: text-top;
  }
</style>
