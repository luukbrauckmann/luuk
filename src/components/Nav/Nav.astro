---
import { Icon, Link, LocaleSelector } from "@components";
import { paths } from "@lib/js/i18n";

const { locale } = Astro.params;
let { links, currentPageSlugs } = Astro.props;
links = links.map((link) => {
  link.slug = paths(link.link).filter((path) => path.locale === locale)[0];
  return link;
});
---

<ul class="nav">
  {
    links.map((link) => (
      <li>
        {
          <Link class="nav__link" {...link}>
            <Icon name={link.icon} />
            <span class="title">{link.title}</span>
          </Link>
        }
      </li>
    ))
  }
</ul>

<LocaleSelector slugs={currentPageSlugs} />

<style>
  .nav {
    display: flex;
    flex-direction: column;
    padding: 0;
    list-style-type: none;
  }

  @media screen and (min-width: 768px) {
    .nav {
      flex-direction: row;
    }
  }

  .nav__link {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    color: inherit;
    font-family: var(--font-family-title);
    text-decoration: none;
  }

  .nav__link:hover {
    background-color: var(--color-hover);
  }
</style>
