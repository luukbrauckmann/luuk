---
import { Icon, Link, LocaleSelector } from "@components";
import { paths } from "@lib/js/i18n";

const { locale } = Astro.params;
let { links, currentPageSlugs } = Astro.props;
links = links.map((link) => {
  if (link.link.__typename === "HomeRecord") {
    link.slug = { locale };
  } else {
    link.slug = paths(link.link).filter((path) => path.locale === locale)[0];
  }
  return link;
});
---

<enhanced-nav>
  <nav class="nav">
    <button class="toggle-button" aria-expanded="false" aria-controls="menu">
      <Icon name="bars" />
      <span class="a11y-sr">Menu</span>
    </button>

    <div id="menu" class="expandabble-menu">
      <ul class="nav-list">
        {
          links.map((link) => (
            <li>
              {
                <Link class="nav-link" {...link}>
                  <Icon class="nav-link__icon" name={link.icon} />
                  <p class="nav-link__title">{link.title}</p>
                  <p class="nav-link__description">{link.description}</p>
                </Link>
              }
            </li>
          ))
        }
      </ul>

      <LocaleSelector slugs={currentPageSlugs} />
    </div>
  </nav>
</enhanced-nav>

<script src="./Nav.client.js"></script>

<style>
  .nav {
    display: flex;
    justify-content: end;
    position: relative;
  }

  .toggle-button {
    border: none;
    background-color: transparent;
    padding: var(--spacing-md);
    line-height: 1;
  }

  .toggle-button:hover {
    background-color: var(--color-hover);
  }

  .toggle-button:focus {
    outline-offset: -0.25rem;
  }

  @media screen and (min-width: 992px) {
    .toggle-button {
      display: none;
    }
  }

  .expandabble-menu {
    position: absolute;
    right: 0;
    bottom: 0;
    transform: translateY(100%);
    background-color: var(--color-foreground);
    min-width: 320px;
    max-width: 100dvw;
  }

  .toggle-button[aria-expanded="true"] + .expandabble-menu {
    display: block;
  }

  .toggle-button[aria-expanded="false"] + .expandabble-menu {
    display: none;
  }

  @media screen and (min-width: 992px) {
    .toggle-button[aria-expanded="true"] + .expandabble-menu,
    .toggle-button[aria-expanded="false"] + .expandabble-menu {
      display: flex;
      position: initial;
      transform: initial;
      background-color: transparent;
      justify-content: space-between;
    }
  }

  .nav-list {
    display: flex;
    flex-direction: column;
    padding: 0;
    list-style-type: none;
  }

  @media screen and (min-width: 992px) {
    .nav-list {
      flex-direction: row;
    }
  }

  .nav-link {
    display: grid;
    grid-template-areas: 'icon title' 'icon description';
    grid-template-columns: auto 1fr;
    column-gap: 0.75rem;
    padding: var(--spacing-md);
    color: inherit;
    text-decoration: none;
  }

  .nav-link:hover {
    background-color: var(--color-hover);
  }

  .nav-link:focus {
    outline-offset: -0.25rem;
  }

  .nav-link__icon {
    grid-area: icon;
  }

  .nav-link__title {
    font-family: var(--font-family-title);
    grid-area: title;
    white-space: nowrap;
  }

  .nav-link__description {
    grid-area: description;
    font-size: var(--font-size-sm);
  }

  @media screen and (min-width: 992px) {
    .nav-link__description {
      display: none;
    }
    
  }
</style>
