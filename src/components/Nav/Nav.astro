---
import { Link } from "@components";

const { links } = Astro.props;
---

<ul class="nav">
  {
    links.map((link) => (
      <li>
        <Link {...link} />
      </li>
    ))
  }
</ul>

<style>
  .nav {
    display: flex;
    flex-direction: column;
    padding: 0;
    list-style-type: none;
  }

  @media screen and (min-width: 768px) {
    .nav {
      flex-direction: row;
    }
  }

  .nav__link {
    display: inline-block;
    padding: 1rem;
    color: inherit;
    text-decoration: none;
  }
</style>
