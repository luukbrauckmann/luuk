---
import { datocms } from "@lib";
import query from "./LocaleSelector.graphql"

const { site } = await datocms.request(query);
---

<nav aria-labelledby="locale-selector-label">
  <h3 id="locale-selector-label" class="a11y">Languages</h3>

  <ul class="locale-selector">
    {site.locales.map(locale => (
      <li>
        <a class="locale-selector__item" href={`/${locale}/`}>{locale}</a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .locale-selector {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 1rem;
  }
  
  .locale-selector__item {
    display: inline-block;
    padding: 1rem;
  }
</style>