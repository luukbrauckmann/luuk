---
import { datocms } from "@lib";
import query from "./LocaleSelector.graphql"

import { Icon } from 'astro-icon/components'

const { site } = await datocms.request(query);

const { params } = Astro;
const current = params.locale;
---

<nav aria-labelledby="locale-selector-label">
  <h3 id="locale-selector-label" class="a11y">Languages</h3>

  <ul class="locale-selector">
    {site.locales.map(locale => (
      <li>
        <a class="locale-selector__item" href={`/${locale}/`} aria-current={ current === locale ? 'page' : undefined }>
          <span class="a11y">{ locale }</span>
          <Icon name={locale} />
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .locale-selector {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
  }
  
  .locale-selector__item {
    display: block;
    padding: 1.5em;
    line-height: 0;
  }

  .locale-selector__item[aria-current="page"] {
    background-color: var(--c-highlight);
  }
</style>