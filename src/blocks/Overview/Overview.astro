---
import { datocms } from "@lib/js";
import query from "./Overview.query.graphql";
import { Image } from "@components";

const { locale } = Astro.params;
const { pageType } = Astro.props;

const { pages } = await datocms.request(query, { locale, pageType });
---

<ul class="overview-block">
  {
    pages.map(({ title, description }) => (
      <li>
        <article class="overview-card">
          <div class="overview-card__image" />
          <div>
            <h2 class="overview-card__title">{title}</h2>
            <p class="overview-card__description">{description}</p>
          </div>
          <a class="overview-card__link" href="">
            Read more
          </a>
        </article>
      </li>
    ))
  }
</ul>

<style>
  .overview-block {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    padding: 0;
    list-style: none;
  }

  @media screen and (min-width: 768px) {
    .overview-block {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media screen and (min-width: 1200px) {
    .overview-block {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }

  .overview-card {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    padding: var(--spacing-md);
  }

  .overview-card__image {
    opacity: 0.6;
    border-radius: var(--spacing-md);
    background-color: grey;
    aspect-ratio: 1;
    width: 100%;
    height: auto;
  }

  .overview-card:hover .overview-card__image {
    opacity: 1;
  }

  .overview-card__title {
    font-size: var(--font-size-md);
  }

  .overview-card__description {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
